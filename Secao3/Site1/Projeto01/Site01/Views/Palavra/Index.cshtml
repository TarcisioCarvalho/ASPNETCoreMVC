
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Palavra - Listagem</title>
</head>
<body>
    <span>Total de Registros: @ViewBag.Palavras.Count</span>
    <div class="container">
        <a href="/palavra/cadastrar" class="btn btn-primary" >Cadastar</a>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Palavra</th>
                    <th scope="col">Nível</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Elefante</td>
                    <td>Facíl</td>
                    <td>
                        <a href="/palavra/atualizar/1" class="btn">Editar</a>
                        <a class="btn" href="/palavra/deletar/1">Excluir</a>
                    </td>
                </tr>
             
            </tbody>
        </table>
    </div>
</body>
</html>
